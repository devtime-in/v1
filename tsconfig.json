{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
		"module": "ESNext", // or "ES6"
		"strictNullChecks": true,
		"baseUrl": ".",
		"verbatimModuleSyntax": true,
		"paths": {
			"@/components/*": ["src/components/*.astro"],
			"@/layouts/*": ["src/layouts/*.astro"],
			"@/utils": ["src/utils/index.ts"],
			"@/utils/*": ["src/utils/*"],
			"@/i18n/*": ["src/i18n/*"],
			"@/assets/*": ["src/assets/*"],
		}
	},
}
