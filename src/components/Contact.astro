---
import { content } from "src/content/Content";
import Component from "./Component.astro";
---

<Component
  title={content.contact.heading}
  extraCss="bg-primary-500/10"
  componentId="contact"
>
  <div class="flex justify-between gap-20 max-lg:gap-10 max-sm:flex-col">
    <div
      class="w-full flex flex-col gap-4 sm:gap-6"
      data-aos="fade-right"
      data-aos-offset="300"
      data-aos-easing="ease-in-sine"
    >
      <div>
        <p
          class="text-lg text-primary-950/70 dark:text-primary-200/70 sm:text-xl"
        >
          {content.contact.subHeading}
        </p>
      </div>
      <div>
        <div class="flex flex-col gap-2">
          <!-- Address -->
          <div
            class="rounded-3xl bg-primary-500/10 px-6 py-2 dark:bg-primary-400/10"
          >
            <div class="flex justify-between gap-6 items-center">
              <svg
                class="h-6 w-6 text-primary-600 dark:text-primary-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  d="M12 23.7279L5.63604 17.364C2.12132 13.8492 2.12132 8.15076 5.63604 4.63604C9.15076 1.12132 14.8492 1.12132 18.364 4.63604C21.8787 8.15076 21.8787 13.8492 18.364 17.364L12 23.7279ZM16.9497 15.9497C19.6834 13.2161 19.6834 8.78392 16.9497 6.05025C14.2161 3.31658 9.78392 3.31658 7.05025 6.05025C4.31658 8.78392 4.31658 13.2161 7.05025 15.9497L12 20.8995L16.9497 15.9497ZM12 13C10.8954 13 10 12.1046 10 11C10 9.89543 10.8954 9 12 9C13.1046 9 14 9.89543 14 11C14 12.1046 13.1046 13 12 13Z"
                ></path>
              </svg>
              <div class="text-base font-medium flex-1">
                <p>{content.contact.address}</p>
              </div>
            </div>
          </div>

          <!-- Phone number -->
          <div
            class="rounded-3xl bg-primary-500/10 px-6 py-2 dark:bg-primary-400/10"
          >
            <div class="flex justify-between gap-6">
              <svg
                class="h-6 w-6 text-primary-600 dark:text-primary-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  d="M9.36556 10.6821C10.302 12.3288 11.6712 13.698 13.3179 14.6344L14.2024 13.3961C14.4965 12.9845 15.0516 12.8573 15.4956 13.0998C16.9024 13.8683 18.4571 14.3353 20.0789 14.4637C20.599 14.5049 21 14.9389 21 15.4606V19.9234C21 20.4361 20.6122 20.8657 20.1022 20.9181C19.5723 20.9726 19.0377 21 18.5 21C9.93959 21 3 14.0604 3 5.5C3 4.96227 3.02742 4.42771 3.08189 3.89776C3.1343 3.38775 3.56394 3 4.07665 3H8.53942C9.0611 3 9.49513 3.40104 9.5363 3.92109C9.66467 5.54288 10.1317 7.09764 10.9002 8.50444C11.1427 8.9484 11.0155 9.50354 10.6039 9.79757L9.36556 10.6821ZM6.84425 10.0252L8.7442 8.66809C8.20547 7.50514 7.83628 6.27183 7.64727 5H5.00907C5.00303 5.16632 5 5.333 5 5.5C5 12.9558 11.0442 19 18.5 19C18.667 19 18.8337 18.997 19 18.9909V16.3527C17.7282 16.1637 16.4949 15.7945 15.3319 15.2558L13.9748 17.1558C13.4258 16.9425 12.8956 16.6915 12.3874 16.4061L12.3293 16.373C10.3697 15.2587 8.74134 13.6303 7.627 11.6707L7.59394 11.6126C7.30849 11.1044 7.05754 10.5742 6.84425 10.0252Z"
                ></path>
              </svg>
              <p class="text-base font-medium flex-1">
                {content.contact.phone}
              </p>
            </div>
          </div>

          <!-- Email -->
          <div
            class="rounded-3xl bg-primary-500/10 px-6 py-2 dark:bg-primary-400/10"
          >
            <div class="flex justify-between gap-6">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="h-6 w-6 text-primary-600 dark:text-primary-400"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
                ></path>
              </svg>
              <p class="text-base font-medium flex-1 break-all">
                {content.contact.email}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <form action="#" id="contactForm" method="POST" class="mt-3 w-full flex flex-col gap-y-6">
      <!-- Full name input -->
      <div>
        <input
          data-aos="fade-left"
          data-aos-offset="300"
          data-aos-easing="ease-in-sine"
          type="text"
          name="full-name"
          id="full-name"
          autocomplete="name"
          class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
          placeholder="Full Name"
        />
      </div>

      <!-- Email input -->
      <div>
        <input
          data-aos="fade-left"
          data-aos-offset="300"
          data-aos-easing="ease-in-sine"
          type="email"
          name="email"
          id="email"
          autocomplete="email"
          class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
          placeholder={content.general.email}
        />
      </div>

      <!-- Message textarea -->
      <div>
        <label for="message" class="sr-only">{content.general.message}</label>
        <textarea
          data-aos="fade-left"
          data-aos-offset="300"
          data-aos-easing="ease-in-sine"
          name="message"
          id="message"
          rows="3"
          class="block w-full appearance-none rounded-md border-0 bg-primary-50 px-4 py-4 text-base ring-1 ring-primary-900/40 transition placeholder:text-primary-950/60 hover:ring-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-600 dark:bg-primary-950 dark:ring-primary-200/40 dark:placeholder:text-primary-200/60 dark:hover:ring-primary-400 dark:focus:ring-primary-400"
          placeholder={content.general.message}></textarea>
      </div>

      <div>
        <button
          data-aos="fade-left"
          data-aos-offset="300"
          data-aos-easing="ease-in-sine"
          class="inline-flex items-center justify-center rounded-full border border-transparent bg-primary-600 px-5 py-3 text-base font-medium text-white transition hover:bg-primary-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600 dark:bg-primary-400 dark:text-primary-950 dark:hover:bg-primary-300 dark:focus-visible:outline-primary-400"
          type="submit"
        >
          {content.general.submit}
        </button>
      </div>
    </form>
  </div>
  <script>
    const form = document.getElementById("contactForm") as HTMLFormElement;
    form.addEventListener("submit", (event: SubmitEvent) => {
      event.preventDefault(); // Prevents the default form submission
      alert("Thank you, Your response saved successfully")
    });
  </script>
</Component>
