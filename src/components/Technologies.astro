---
import { content } from "src/content/Content";
import Component from "./Component.astro";

const languages = content.technologies.languages;
---

<Component title={content.technologies.heading} componentId="about">
    <div class="flex flex-col gap-12">
        <div
            class="flex w-fit flex-wrap justify-center gap-10 max-sm:max-h-[calc(100vh_-_4.5rem)] max-sm:overflow-auto max-sm:rounded-2xl max-sm:bg-primary-100 max-sm:dark:bg-primary-900 max-sm:py-4"
            data-aos="fade-up"
            data-aos-duration="600"
        >
            {
                languages.map((lang, index) => (
                    <div class="flex w-full max-w-[170px] hover:scale-125 transition-transform duration-300 ease-in-out items-center gap-2 rounded-md px-4 py-2">
                        <img
                            src={lang.icon}
                            class="h-10 w-10 items-center"
                            alt={lang.name}
                        />
                        <p>{lang.name}</p>
                    </div>
                ))
            }
        </div>
    </div>
</Component>
